<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.20.4.xsd">

    <jdbc>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>${DB_URL}</url>
        <user>${DB_USER}</user>
        <password>${DB_PASS}</password>
    </jdbc>

    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>

        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <inputSchema>tienda_ecologica</inputSchema>
            <includes>.*</includes>
            <excludes></excludes>
        </database>

        <generate>
            <daos>false</daos>
            <pojos>false</pojos>
            <relations>true</relations>
        </generate>

        <target>
            <packageName>es.ecoshop.api.genereted.jooq</packageName>
            <directory>target/generated-sources/jooq</directory>
        </target>

    </generator>
</configuration>